add_newline = false

# A minimal left prompt
format = """
$os$username$character$directory$character
"""

# move the rest of the prompt to the right
#right_format = """$status$git_branch${custom.git_status_dirty}$git_status"""
right_format = """
$conda
$status
$cmd_duration
$git_branch
$git_commit
$git_status
"""

[battery] #Displays whenever the laptop is charging, have full battery or is using the power
full_symbol = "🔋 "
charging_symbol = "🔌 "
discharging_symbol = "⚡"

[[battery.display]]
threshold = 10
style = "bold red"

[[battery.display]]
threshold = 20
style = "bold orange"

[[battery.display]]
threshold = 50
style ="bold yellow"

[[battery.display]]
threshold = 80
style ="bold green"
# This just shows how much power the laptop has in the terminal, the colors shows if it starting to get critical to charge the laptop

# [character]
# error_symbol = "[✗](bold #ff0000)"
# success_symbol = "[❯](bold #ea00d9)"

[character]
success_symbol = "[❯](purple)[❯](cyan)"
error_symbol = "[❯](yellow)[❯](red)"
vicmd_symbol = "[❮](purple)[❮](cyan)"
# success_symbol = "[⨠](purple)"
# error_symbol = "[⨠](red)"
# vicmd_symbol = "[⪻](yellow)"

[directory]
truncation_length = 3
#truncation_symbol = '…/'
fish_style_pwd_dir_length = 3
truncate_to_repo = true
format = "[$path]($style)[$lock_symbol]($lock_style) "
style = "bold #f57800"
read_only = "🔒"
read_only_style= "bold white"


[git_branch]
format = " [$symbol$branch]($style) "
symbol = "🍣 "
style = "bold yellow"

[git_commit]
commit_hash_length = 8
style = "bold white"

[git_status]
format = "[$all_status$ahead_behind]($style)"
modified = "M${count}"
untracked = "U${count}"
deleted = "🗑 "
renamed = "👅"
conflicted = "🏳 "
ahead = "⇡${count} "  # unpushed commit
behind = "⇣${count} "
diverged = "😵⇡${ahead_count}⇣${behind_count} "

[hostname]
ssh_symbol = " "
ssh_only = false
format = "<[$hostname]($style)>"
trim_at = "-"
style = "bold #ea00d9"
disabled = false

[cmd_duration]
min_time = 10_000  # Show command duration over 10,000 milliseconds (=10 sec)
format = " took [$duration]($style)"

[time]
disabled = false
format = '🕙[\[$time\]]($style) '
time_format = "%T"
utc_time_offset = "1"

[username]
style_root = "bold red"
style_user = "bold #ea00d9"
show_always = true
format = "[$user]($style)"

[line_break]
disabled = true

[status]
disabled = false

